<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/test_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_test_granted" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/test_result_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 из 15"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/test_result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Поздравляем! Вы прошли тест!" />

        <TextView
            android:id="@+id/test_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ваша оценка 5"
            android:textColor="#000"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>